@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid p-0">
    <div class="owl-carousel header-carousel position-relative" id="carousel">
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/FrontEnd/img/carousel-1.jpg" alt="">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-10 col-lg-8">
                            <h1 class="display-3 text-white animated slideInDown mb-4">Find The Perfect Job That You Deserved</h1>
                            <p class="fs-5 fw-medium text-white mb-4 pb-2">"CareerSync, your compass for professional success, seamlessly connects ambitious individuals with tailored career opportunities, fostering a dynamic synergy between talent and thriving organizations."</p>
                            <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Search A Job</a>
                            <a href="#trackingSection" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Track Your Status</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="owl-carousel-item position-relative">
            <img class="img-fluid" src="~/FrontEnd/img/carousel-2.jpg" alt="">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-10 col-lg-8">
                            <h1 class="display-3 text-white animated slideInDown mb-4">Find The Best Startup Job That Fit You</h1>
                            <p class="fs-5 fw-medium text-white mb-4 pb-2">"CareerSync: Your personalized gateway to professional success, seamlessly connecting ambitious individuals with tailored career opportunities and invaluable resources for skill enhancement, ensuring a synchronized journey towards fulfillment and growth."</p>
                            <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Search A Job</a>
                            <a href="#trackingSection" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Track Your Status</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model FileModel

<!-- Search Start -->
<div id="trackingSection" class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div  class="container">
        <div class="row justify-content-center ">
            <div class="col-md-6">
                <form asp-controller="CV" asp-action="GetStatus" method="post" class="py-3 px-4 bg-white rounded shadow-sm">
                    <div   class="form-group mb-3">
                        <input type="text" id="trackingId" name="trackingId" class="form-control" placeholder="Enter Tracking ID" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Track Status</button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Search End -->


