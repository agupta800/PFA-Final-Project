@model IEnumerable<JobPostModel>

@{
    ViewData["Title"] = "JobList";
    Layout = "~/Views/Shared/_AdminPartial.cshtml";
}

<h1>NewJob</h1>



<div asp-validation-summary="All" class="text-danger"></div>


<div class="container mt-4">
    <form asp-action="NewJob" method="POST" id="newJob_form">
        @Html.AntiForgeryToken()

        <!-- Your existing form fields -->

   


        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5>Category</h5>
                    </div>
                    <div class="card-body">

                        <div class="mb-3">
                            <label for="companyname" class="form-label">Company Name</label>
                            <input type="text" id="companyname" name="companyname" class="form-control" placeholder="Enter Company Name" required />
                        </div>

                        <div class="mb-3">
                            <label for="jobTitle" class="form-label">Job Title</label>
                            <input type="text" id="jobTitle" name="jobTitle" class="form-control" placeholder="Enter Job title" required />
                        </div>

                        <div class="mb-3">
                            <label for="applylink" class="form-label">Apply link</label>
                            <input type="text" id="applylink" name="applylink" class="form-control" placeholder="Enter apply link" required />
                        </div>

                        <div class="mb-3">
                            <label for="txtDescription" class="form-label">Description</label>
                            <textarea id="txtDescription" name="txtDescription" class="form-control" rows="4" placeholder="Enter Description" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="inputDate" class="form-label">Last Date to apply</label>
                            <input type="date" id="inputDate" name="inputDate" class="form-control" min="2023-01-01" max="2030-01-01" required />
                        </div>

                        <div class="mb-3">
                            <label for="companyImageUrl" class="form-label">Company Image URL</label>
                            <input type="text" id="companyImageUrl" name="companyImageUrl" class="form-control" placeholder="Enter image URL" required />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block">Post</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
   
    @if (TempData["msg"] != null)
    {
        <script>
            // Check if TempData["msg"] is not null before using it
            var msg = '@TempData["msg"]';
            if (msg !== null) {
                alert(msg);
            }
        </script>


    }
</div>
