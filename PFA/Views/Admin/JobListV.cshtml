@model IEnumerable<PFA.JobModel.JobPostModel>
@{
    ViewData["Title"] = "JobListV";
    Layout = "~/Views/Shared/_AdminPartial.cshtml";
}


@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid col-11 offs">
    <a class="btn btn-primary mb-1" asp-action="newjob" asp-controller="Admin">Add New Job</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">List of Users</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Company Name</th>
                        <th>Job Title</th>
                        <th>Apply Link</th>
                        <th>Descriptiion</th>
                        <th>Image</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.JobID</td>
                            <td>@user.companyname</td>
                            <td>@user.jobTitle</td>
                            <td>@user.applylink</td>
                            <td>@user.txtDescription</td>
                            <td><img src="@user.companyImageUrl" alt="@user.companyname" width="100" height="100" /></td>
                            <td>@user.inputDate</td>

                            <td>
                                <a class="btn" asp-action="Updatejob" asp-controller="Admin" asp-route-id="@user.JobID">   <i class="fas fa-pen"></i></a>
                               <a class="btn" asp-action="DeleteJob" asp-controller="Admin" asp-route-id="@user.JobID"> <i class="fas fa-trash"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>





