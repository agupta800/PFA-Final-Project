@model PFA.ViewModel.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="UserList"  asp-controller="Admin">Go Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Password Reset</h4>
        </div>
        <div class="card-body">
@*             <input type="hidden" asp-for="I" />
 *@            <form asp-action="ResetPassword" method="post"  >
                <div class="mb-2">
                    <label>Username</label>
                    <input type="text" asp-for="UserName" class="form-control" disabled />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Username</label>
                    <input type="text" asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>New Password</label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <button type="submit" class="btn btn-primary w-100" onclick="return confirm('Are you sure you want to reset the password?');">Reset password</button>
                </div>
            </form>
        </div>
    </div>
</div>

