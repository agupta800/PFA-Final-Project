@model Response
@{
    ViewData["Title"] = "ForgetPasswordConfirmation";
    Layout = "~/Views/Shared/_LayoutLR.cshtml";
}

<div style="text-align: center; margin-top: 2rem;">
    <h1 style="font-size: 2.5rem;">Password Reset Request Received</h1>
    <p style="font-size: 1.25rem;">Please check your email for instructions.</p>
</div>
<div style="text-align: center; margin-top: 1.5rem;">
    <a asp-action="Login" asp-controller="Account" style="display: inline-block; padding: 0.75rem 1.5rem; font-size: 1.25rem; text-decoration: none; background-color: #ffc107; color: #fff; border-radius: 0.25rem;">Back</a>
</div>
